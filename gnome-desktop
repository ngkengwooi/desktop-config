#!/bin/bash -e
################################################################################
# Configure GNOME desktop.
# Execute as superuser.
################################################################################

# Apply common configuration
curl -fsSL https://raw.githubusercontent.com/ngkengwooi/desktop-config/main/scripts/debian-common | bash

# Harmonise theming for QT apps
echo "QT_STYLE_OVERRIDE=Adwaita" > /etc/environment

# Use Ansible to manage apps
ansible-pull -U https://github.com/ngkengwooi/desktop-config ansible/gnome-desktop.yml

# Final update and cleanup
system-update
